# NAME

Mojo::UserAgent::Paranoid - paranoid user agent for fetching unknown URLs

# SYNOPSIS

    my $io = Mojo::IOLoop->singleton;
    my $ua = Mojo::UserAgent::Paranoid->new(
        paranoid_dns => Net::DNS::Paranoid->new(
            blocked_hosts => [qr{\.dev.example\.com$}]
        ),
        ioloop       => $io,
    );

