kind: ConfigMap
apiVersion: v1
metadata:
  name: [% oc_config.instance_specific_name.solr_logrotate %]
  namespace: [% namespace %]
  labels:
    app: [% oc_config.instance_specific_name.solr %]  
immutable: false
data:
  logrotate.conf: |-
    /opt/solrLogs/solrBc.log {
        daily
        missingok
        rotate 7
        compress
        sharedscripts
        notifempty
    }
