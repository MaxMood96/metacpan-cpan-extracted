kind: DeploymentConfig
apiVersion: apps.openshift.io/v1
metadata:
  name: [% oc_config.instance_specific_name.solr_admin %]
  namespace: [% namespace %]
  labels:
    app: [% oc_config.instance_specific_name.solr_admin %]
spec:
  strategy:
    type: Rolling
    rollingParams:
      updatePeriodSeconds: 1
      intervalSeconds: 1
      timeoutSeconds: 600
      maxUnavailable: 25%
      maxSurge: 25%
    resources: {}
    activeDeadlineSeconds: 21600
  triggers:
    - type: ConfigChange
    - type: ImageChange
      imageChangeParams:
        automatic: true
        containerNames:
          - [% oc_config.instance_specific_name.solr_admin %]
        from:
          kind: ImageStreamTag
          namespace: [% namespace %]
          name: [% oc_config.instance_specific_name.solr %]:latest
  replicas: 1
  revisionHistoryLimit: 10
  test: false
  selector:
    app: [% oc_config.instance_specific_name.solr_admin %]
    deploymentconfig: [% oc_config.instance_specific_name.solr_admin %]
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: [% oc_config.instance_specific_name.solr_admin %]
        deploymentconfig: [% oc_config.instance_specific_name.solr_admin %]
    spec:
      volumes:
        - name: solr-data
          persistentVolumeClaim:
            claimName: [% oc_config.instance_specific_name.solr_admin_index %]
        - name: [% oc_config.conf_volume %]
          persistentVolumeClaim:
            claimName: [% oc_config.conf_volume %]
        - name: solr-log
          persistentVolumeClaim:
            claimName: [% oc_config.instance_specific_name.solr_admin_log %]
        - name: solr-logrotate
          configMap:
            name: [% oc_config.instance_specific_name.solr_logrotate %]
            items:
              - key: logrotate.conf
                path: logrotate.conf
            defaultMode: 420
      containers:
        - resources:
            limits:
              [% IF oc_config.instance_specific_data.solr_admin.limits.cpu %]
              cpu: '[% oc_config.instance_specific_data.solr_admin.limits.cpu %]'
              [% END %]
              [% IF oc_config.instance_specific_data.solr_admin.limits.memory %]
              memory: [% oc_config.instance_specific_data.solr_admin.limits.memory %]
              [% END %]
            requests:
              [% IF oc_config.instance_specific_data.solr_admin.requests.cpu %]
              cpu: '[% oc_config.instance_specific_data.solr_admin.requests.cpu %]'
              [% END %]
              [% IF oc_config.instance_specific_data.solr_admin.requests.memory %]
              memory: [% oc_config.instance_specific_data.solr_admin.requests.memory %]
              [% END %]
          terminationMessagePath: /dev/termination-log
          name: [% oc_config.instance_specific_name.solr_admin %]
          env:
            - name: SOLR_INSTANCE
              value: admin
            - name: USERID
              value: '1000210000'
            - name: INSTANCE
              value: [% instance %]
          ports:
            - containerPort: [% oc_config.solr_port %]
              protocol: TCP
          imagePullPolicy: Always
          volumeMounts:
            - name: solr-data
              mountPath: /opt/solr-data
            - name: [% oc_config.conf_volume %]
              mountPath: /opt/config
            - name: solr-log
              mountPath: /opt/solrLogs
            - name: solr-logrotate
              mountPath: /home/solr/logrotate.conf
              subPath: logrotate.conf
          terminationMessagePolicy: File
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
