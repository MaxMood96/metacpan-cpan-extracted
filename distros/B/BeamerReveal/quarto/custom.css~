/* Ensure the top-level container of the notes area takes up all available space */
.speaker-controls-notes {
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* Force the intermediate 'value' container to fill that height */
.speaker-controls-notes .value {
    flex-grow: 1; /* Tells this div to grow to fill all remaining space */
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden; /* Prevents stray scrollbars */
    min-height: 0;
}

/* The image now has a rigid container to scale within */
.speaker-controls-notes .value img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}
