# lib/SPVM/TestCase/Resource/SQLite.config

use strict;
use warnings;
use SPVM::Builder::Config;

my $config = SPVM::Builder::Config->new_c99;
my $resource = $config->use_resource('Resource::SQLite');

$resource->config->optimize('-O0');

if ($^O eq 'MSWin32') {
  # Statically link winpthread and gcc-related libs to avoid DLL dependency
  $config->add_static_lib('winpthread', 'gcc');
}

$config->add_ldflag('-pthread');

$config->force(1);
$config->quiet(0);

$config;
