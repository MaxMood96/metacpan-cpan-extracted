#!/usr/bin/perl
#=============================================================================
# Cleaner for LemonLDAP::NG: purge local handler cache and session cache
#
# This module is written to be used by cron to clean cache objects used
# by Handler.
#
# This is part of LemonLDAP::NG product, released under GPL-2+
#=============================================================================

use strict;
use Getopt::Std;
use Lemonldap::NG::Common::Session::Purge;

# Options
# -d: debug mode
our $opt_d;
getopts('d');

my $opts = { ( $opt_d ? ( logLevel => 'debug' ) : () ), };

exit 1 unless Lemonldap::NG::Common::Session::Purge->new($opts)->localPurge();
